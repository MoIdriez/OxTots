@model OxTots.ViewModel.ContactViewModel
@{ ViewBag.Title = "Contact Page"; }

<!-- Main Banner Area Start Here -->
<section class="main-banner-wrap-layout1 bg-common overlay-dark-30 bg--gradient-top-30" data-bg-image="/Images/figure/site-main-figure1.jpg"></section>

<!-- Feature Area Start Here -->
<section class="feature-wrap-layout1 padding-top-9p6 padding-bottom-7 bg--accent">
    <div class="container">
        <div class="section-heading heading-dark heading-center">
            <h2 class="item-title">@Model.Title</h2>
            <div class="item-sub-title">@Model.Description</div>

        </div>
    </div>
    <div class="container">
        <div class="contact-box">
            <h2 class="item-heading">@Model.Title</h2>
            <p>@Model.Description</p>
            @using (Html.BeginForm("Submit", "Contact", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new
            {
                @class = "contact-form-box"
            })) {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-12 form-group">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = Model.NamePlaceHolder } )
                    </div>
                    <div class="col-12 form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Model.EmailPlaceHolder })
                    </div>
                    <div class="col-12 form-group">
                        @Html.TextAreaFor(m => m.Message, 10, 55, new { @class = "form-control", placeholder = Model.MessagePlaceHolder })
                    </div>
                    <div class="col-12 form-group">
                        <div class="checkbox-filter">
                            <input id="gdpr-checkbox" name="checkbox" class="hidden" type="checkbox"/>
                            <label for="gdpr-checkbox" class="float-left">@Model.ContactGDPRMessage</label>
                        </div>
                    </div>
                    <div class="col-12 form-group mb-0 mt-3">
                        <button type="submit" id="submit-form-button" class="item-btn disabled" disabled>@Model.SubmitButtonText</button>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Feature Area End Here -->
